---
interface Activity {
  hour: string;
  name: string;
  ubication: string;
  description: string;
}

interface DaySchedule {
  date: string;
  activities: Activity[];
}

interface Props {
  id?: string;
  schedule: DaySchedule[];
}

const { id = 'schedule', schedule } = Astro.props as Props;
---

<section id={id} class="scroll-mt-28 py-16 sm:py-20 md:py-24" aria-labelledby={`${id}-title`}>
  <header class="flex justify-center my-32">
    <h2
      id={`${id}-title`}
      class="text-3xl md:text-4xl lg:text-5xl font-semibold tracking-wide drop-shadow-sm text-white"
      style="font-family: 'Cabin Sketch', cursive;"
    >
      Cronograma
    </h2>
  </header>

  <div>
    {
      schedule.map((day) => (
        <>
          <div class="flex justify-center items-center">
            <h3 class="text-[#FFC727] text-lg md:text-2xl font-semibold relative  before:content-[''] before:absolute before:left-[-16px] before:top-1/2 before:-translate-y-1/4 before:w-[calc(50vw-50%)] md:before:h-[6px] before:h-[4px] before:rounded-r-lg before:bg-[#FFC727] before:-translate-x-full before:mr-4">
              {day.date}
            </h3>
          </div>
          <div class="m-4 md:mx-40 flex flex-col items-center">
            {day.activities.map((activity) => (
              <article class="flex my-2 bg-[#62626233] rounded-2xl w-full">
                <div class="bg-[#FFC727] flex items-center p-4  md:px-8 text-white md:font-bold font-semibold rounded-l-2xl rounded-r-[6px] text-sm md:text-base">
                  <time datetime={activity.hour}>{activity.hour}</time>
                </div>
                <div class="flex flex-col justify-center mx-5 text-white">
                  <h4 class="font-bold text-sm">
                    {activity.name} - {activity.ubication}
                  </h4>
                  <p class="text-xs">{activity.description}</p>
                </div>
              </article>
            ))}
          </div>
        </>
      ))
    }
  </div>
</section>
